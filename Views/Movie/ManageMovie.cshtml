@model IEnumerable<CinemaPortalCore.Models.Movie>

<div class="container">
    <div class="row">
        <div class="text-primary mt-4">
            <h1>Manage Movies</h1>
        </div>
    </div>

    <hr />

    @if (Model.Count() > 0)
    {
        <table class="table border border-dark text-center">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.Movie_ID</td>
                        <td>@movie.Title</td>
                        <td> <button class="btn btn-warning" href=''>UPDATE</button> </td>
                        <td> <button class="btn btn-danger" href=''>DELETE</button> </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Movies to manage</p>
    }



</div>
