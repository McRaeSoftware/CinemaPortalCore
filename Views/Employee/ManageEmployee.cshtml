@model IEnumerable<CinemaPortalCore.Models.Employee>

<div class="container">
    <div class="row">
        <div class="text-primary col-6 mt-4">
            <h1>Manage Employees</h1>
        </div>

    </div>

    <hr />

    @if (Model.Count() > 0)
    {
        <table class="table border border-dark text-center">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Jobrole</th>
                    <th scope="col">Promote</th>
                    <th scope="col">Demote</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model)
                {
                    <tr>
                        <td>@employee.Employee_ID</td>
                        <td>@employee.Username</td>
                        <td>@employee.Jobrole</td>
                        <td> <button class="btn btn-success" href=''>PROMOTE</button> </td>
                        <td> <button class="btn btn-warning" href=''>DEMOTE</button> </td>
                        <td> <button class="btn btn-danger" href=''>DELETE</button> </td>
                    </tr>
                }
            </tbody>



        </table>
    }
    else
    {
        <p>No Employees to manage</p>
    }



    </div>

